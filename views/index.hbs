.registration_form{
  
  padding: 25px;
  border-radius: 5px;
  width: 700px;
  
}

.registration_form .title{
  text-align: center;
  font-size: 25px;
  text-transform: uppercase;
  color: white;
  background:rgb(13, 98, 215);
  letter-spacing: 2px;
  font-weight: 700;
  margin-top: -25px;
  margin-left:-25px;
  margin-right:-25px;
}

.form_wrap{
  margin-top: 35px;
}

.form_wrap .input_wrap{
  margin-bottom: 15px;
}

.form_wrap .input_wrap:last-child{
  margin-bottom: 0;
}

.form_wrap .input_wrap label{
  display: block;
  margin-bottom: 3px;
  color: #ffffff;
}

.form_wrap .input_grp{
  display: flex;
  justify-content: space-between;
}

.form_wrap .input_grp  input[type="text"]{
  width: 165px;
}

.form_wrap  input[type="text"]{
  width: 100%;
  border-radius: 3px;
  border: 1.3px solid #9597a6;
  padding: 10px;
  outline: none;
}

.form_wrap  input[type="text"]:focus{
  border-color: #363636;
}

.form_wrap ul{
 border:1px solid rgba(115, 185, 235, 0.082);
  width: 90%;
  background: rgba(224, 11, 11, 0);
  margin-left: 5%;
  padding: 8px 10px;
  border-radius: 20px;
  display: flex;
  justify-content: center;
}

.form_wrap ul li:first-child{
  margin-right: 15px;
}

.form_wrap ul .radio_wrap{
  position: relative;
  margin-bottom: 0;
}

.form_wrap ul .radio_wrap .input_radio{
  position: absolute;
  top: 0;
  right: 0;
  opacity: 0;
}

.form_wrap ul .radio_wrap span{
  display: inline-block;
  font-size: 17px;
  padding: 3px 15px;
  border-radius: 15px;
  color: #b1b2bb;
}

.form_wrap .input_radio:checked ~ span{
  background: #105ce2;
  color:white;
  transition: 0.5s;
}

.form_wrap .submit_btn{
  width: 100%;
  transition: 0.5s;
  background: #0d6ad7;
  padding: 10px;
  border: 0;
  color:white;
  font-size:17px;
  border-radius: 3px;
  text-transform: uppercase;
  letter-spacing: 2px;
  cursor: pointer;
}

.form_wrap .submit_btn:hover{
  background: #051c94;
  
}
.wrapper {
  position: relative;
  min-height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
  
 
}

.top-right-circle,
.bottom-left-circle {
  position: absolute;
  width: 30rem;
  height: 30rem;
  filter: blur(8px);
  /* Orange with transparency */
  border-radius: 50%;
  z-index: -1; /* Place behind other content */
  
}


.top-right-circle {
  top: -10rem; /* Adjust as needed */
  right: 10rem; /* Adjust as needed */
   background-color: rgb(255, 166, 0);
    animation: anime 3s infinite;
}
@keyframes anime {
  0% {
    transform: translateX(0);
  }
  50% {
    transform: translateX(50px);
  }
  100% {
    transform: translateX(0);
  }
}

.bottom-left-circle {
  bottom: 0rem; /* Adjust as needed */
  left: 10rem; /* Adjust as needed */
   background-color: rgb(255, 0, 149);
   animation: anime2 3s infinite;
}
@keyframes anime2 {
  0% {
    transform: translateX(0);
  }
  50% {
    transform: translateX(-50px);
  }
  100% {
    transform: translateX(0);
  }
}
